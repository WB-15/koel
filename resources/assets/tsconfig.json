{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2021",
    "lib": ["es2021", "dom"],
    "jsx": "preserve",
    "strict": true,
    "noImplicitAny": false,
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowJs": true,
    "paths": {
      "@/*": ["js/*"]
    },
    "types": ["@types/node", "vitest/globals"]
  },
  "include": [
    "js/**/*"
  ],
  "exclude": [
    "js/__tests__/**/*"
  ]
}
